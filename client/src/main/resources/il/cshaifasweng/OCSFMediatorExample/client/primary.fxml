<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController">
    <children>
        <Label fx:id="statusLabel" text="Not Connected" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane fx:id="gameBoard" alignment="CENTER" hgap="10" vgap="10">
            <Button fx:id="btn0" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn1" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn2" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-size: 24px;"/>

            <Button fx:id="btn3" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn4" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn5" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-size: 24px;"/>

            <Button fx:id="btn6" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn7" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 24px;"/>
            <Button fx:id="btn8" text="" prefWidth="80" prefHeight="80" onAction="#onCellClick" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-size: 24px;"/>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>